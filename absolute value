#include <iostream>
#include <cstdlib> // For abs() function
using namespace std;

int main() {
    int num;
    cout << "Enter an integer: ";
    cin >> num;

    // Using abs() function to find the absolute value
    int absolute_value = abs(num);

    cout << "The absolute value of " << num << " is " << absolute_value << "." << endl;

    return 0;
}
