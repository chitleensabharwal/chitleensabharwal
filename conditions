#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter an integer: ";
    cin >> num;

    // Check multiple conditions using AND (&&) and OR (||)
    if (num > 0 && num % 2 == 0) {
        cout << num << " is a positive even number." << endl;
    } else if (num > 0 && num % 2 != 0) {
        cout << num << " is a positive odd number." << endl;
    } else if (num < 0 || num == 0) {
        cout << num << " is either negative or zero." << endl;
    }

    return 0;
}
